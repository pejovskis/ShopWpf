<Window x:Class="SchuhLadenApp.View.EditArticleInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchuhLadenApp"
        mc:Ignorable="d"
        Title="EditArticleInfo" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="gridEditUsercell" ItemsSource="{Binding Articles}" Margin="0,0,0,291"></DataGrid>
        <Button x:Name="btnSave" Content="save" HorizontalAlignment="Left" Margin="739,404,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="btnBack" Content="back" HorizontalAlignment="Left" Margin="20,404,0,0" VerticalAlignment="Top" Click="btnBack_Click"/>

    </Grid>
</Window>
