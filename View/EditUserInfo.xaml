        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchuhLadenApp"
        mc:Ignorable="d"
        Title="EditUserInfo" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="gridEditUsercell" ItemsSource="{Binding Users}" SelectionChanged="DataGrid_SelectionChanged" Margin="0,0,0,291"></DataGrid>
        <Button x:Name="btnSave" Content="update user" HorizontalAlignment="Left" Margin="476,0,0,0" VerticalAlignment="Center" Click="btnSave_Click_1"/>
        <Button x:Name="btnBack" Content="back" HorizontalAlignment="Left" Margin="272,212,0,0" VerticalAlignment="Top" Click="btnBack_Click_1"/>
    </Grid>
</Window>
